{
  "name": "buildcache-action",
  "version": "1.0.0",
  "private": false,
  "description": "GitHub Action that installs and configures buildcache to accelerate compilation",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikehardy/buildcache-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "build",
    "compile",
    "cache",
    "buildcache"
  ],
  "author": "Mike Hardy <github@mikehardy.net>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^15.0.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "^0.28.4",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
